package controller;

import javafx.animation.FadeTransition;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.scene.layout.Pane;
import javafx.stage.Stage;
import javafx.util.Duration;

import java.io.File;
import java.io.IOException;
import java.net.URL;

public class LoginController {

    @FXML private TextField usernameField;
    @FXML private PasswordField passwordField;
    @FXML private ComboBox<String> roleChoiceBox;
    @FXML private Label messageLabel;

    @FXML
    public void initialize() {
        roleChoiceBox.getItems().addAll("Elder", "Caretaker");
    }

    @FXML
    private void handleLogin() {
        System.out.println("handleLogin() called");

        String username = usernameField.getText();
        String password = passwordField.getText();
        String role = roleChoiceBox.getValue();

        if (username.isEmpty() || password.isEmpty() || role == null) {
            messageLabel.setText("Please fill all fields and select a role.");
            return;
        }

        messageLabel.setText("Login successful!");

        // Dummy data for post registration
        String dataForPostRegistration = role.equalsIgnoreCase("elder") ? "PAIR1234" : "John Doe";

        goToPostRegistration(role, dataForPostRegistration);
    }

    @FXML
    private void handleRegistration() {
        System.out.println("handleRegistration() called");

        try {
            URL resourceUrl = getClass().getResource("/fxml/Registration.fxml");
            if (resourceUrl == null) {
                messageLabel.setText("Could not find registration page resource.");
                return;
            }

            FXMLLoader loader = new FXMLLoader(resourceUrl);
            Pane root = loader.load();

            Stage stage = (Stage) usernameField.getScene().getWindow();
            Scene scene = new Scene(root);

            FadeTransition ft = new FadeTransition(Duration.millis(400), root);
            ft.setFromValue(0);
            ft.setToValue(1);
            ft.play();

            stage.setScene(scene);
            stage.show();

            System.out.println("Navigated to Registration.fxml");

        } catch (IOException e) {
            e.printStackTrace();
            messageLabel.setText("Failed to load registration page.");
        }
    }

    private void goToPostRegistration(String role, String data) {
        System.out.println("Navigating to post_registration.fxml...");

        // Absolute path for your FXML
        String absolutePath = "D:/projectBrightImpact/Project-Bright-Impact/ElderCareApp/src/fxml/post_registration.fxml";

        try {
            File fxmlFile = new File(absolutePath);
            System.out.println("Looking for FXML at: " + fxmlFile.getAbsolutePath());

            if (!fxmlFile.exists()) {
                messageLabel.setText("FXML file not found at " + absolutePath);
                return;
            }

            FXMLLoader loader = new FXMLLoader(fxmlFile.toURI().toURL());
            Pane root = loader.load();

            PostRegistrationController controller = loader.getController();
            controller.initializeView(role, data);

            Stage stage = (Stage) usernameField.getScene().getWindow();
            Scene scene = new Scene(root);

            FadeTransition ft = new FadeTransition(Duration.millis(400), root);
            ft.setFromValue(0);
            ft.setToValue(1);
            ft.play();

            stage.setScene(scene);
            stage.show();

            System.out.println("Navigation to post_registration.fxml complete");

        } catch (IOException e) {
            e.printStackTrace();
            messageLabel.setText("Failed to load post-registration page.");
        }
    }
}
