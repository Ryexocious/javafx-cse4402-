package controller;

import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.control.ComboBox;
import javafx.scene.control.Label;
import javafx.scene.control.PasswordField;
import javafx.scene.control.TextField;
import javafx.scene.layout.Pane;
import javafx.stage.Stage;
import javafx.animation.FadeTransition;
import javafx.util.Duration;

import java.io.File;
import java.io.IOException;
import java.net.URL;

public class LoginController {

    @FXML private TextField usernameField;
    @FXML private PasswordField passwordField;
    @FXML private ComboBox<String> roleChoiceBox;
    @FXML private Label messageLabel;

    @FXML
    public void initialize() {
        roleChoiceBox.getItems().addAll("Elder", "Caretaker");
    }

    @FXML
    private void handleLogin() {
        String username = usernameField.getText();
        String password = passwordField.getText();
        String role = roleChoiceBox.getValue();

        if (username.isEmpty() || password.isEmpty() || role == null) {
            messageLabel.setText("Please fill all fields and select a role.");
            return;
        }

        messageLabel.setText("Login successful!");
        // TODO: Add actual login logic here
    }

    @FXML
    private void handleRegistration() {
        System.out.println("Register button pressed!");

        String role = roleChoiceBox.getValue();

        if (role == null) {
            messageLabel.setText("Please select a role before registering.");
            System.out.println("Role not selected; cannot proceed to registration.");
            return;
        }

        String fxmlPath = role.equals("Elder") ? "/fxml/ElderRegistration.fxml" : "/fxml/CaretakerRegistration.fxml";
        System.out.println("Attempting to load FXML: " + fxmlPath);

        try {
            URL resourceUrl = getClass().getResource(fxmlPath);
            System.out.println("Resource URL: " + resourceUrl);
            
            if (resourceUrl == null) {
                messageLabel.setText("FXML resource not found: " + fxmlPath);
                System.err.println("FXML resource not found at path: " + fxmlPath);
                // Optionally fallback to loading from absolute file path (uncomment if needed)
                /*
                String absolutePath = "D:/projectBrightImpact/Project-Bright-Impact/ElderCareApp/src/fxml/"
                        + (role.equals("Elder") ? "ElderRegistration.fxml" : "CaretakerRegistration.fxml");
                File file = new File(absolutePath);
                if (!file.exists()) {
                    messageLabel.setText("FXML file not found at: " + absolutePath);
                    return;
                }
                FXMLLoader loader = new FXMLLoader(file.toURI().toURL());
                Pane root = loader.load();
                */
                return;
            }

            FXMLLoader loader = new FXMLLoader(resourceUrl);
            Pane root = loader.load();

            Stage stage = (Stage) usernameField.getScene().getWindow();
            Scene scene = new Scene(root);

            FadeTransition ft = new FadeTransition(Duration.millis(400), root);
            ft.setFromValue(0);
            ft.setToValue(1);
            ft.play();

            stage.setScene(scene);
            System.out.println("Registration page loaded successfully.");

        } catch (IOException e) {
            e.printStackTrace();
            messageLabel.setText("Failed to load registration page.");
        }
    }
}
