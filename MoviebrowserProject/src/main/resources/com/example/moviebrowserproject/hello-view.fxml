<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviebrowserproject.MovieController">
    <top>
        <VBox>
            <children>
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸŽ¬ Movie Browser" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ToggleButton fx:id="darkModeToggle" mnemonicParsing="false" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 5;" text="Dark Mode" />
                    </children>
                </HBox>

                <!-- Search and Filter Bar -->
                <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Search:" />
                        <TextField fx:id="searchField" prefWidth="300.0" promptText="Search movies by title..." style="-fx-background-radius: 5; -fx-border-radius: 5;" />

                        <Separator orientation="VERTICAL" />

                        <Label style="-fx-font-weight: bold;" text="Genre:" />
                        <ComboBox fx:id="genreComboBox" prefWidth="150.0" style="-fx-background-radius: 5;" />

                        <Separator orientation="VERTICAL" />

                        <Button fx:id="watchLaterButton" mnemonicParsing="false" onAction="#handleWatchLaterButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-border-radius: 5;" text="Watch Later" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <ScrollPane fx:id="movieScrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="movieContainer" spacing="10.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 12px;" text="Â© 2024 Movie Browser - Built with JavaFX" />
            </children>
        </HBox>
    </bottom>
</BorderPane>