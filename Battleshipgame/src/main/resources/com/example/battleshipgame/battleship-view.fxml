<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.battleshipgame.BattleshipController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" styleClass="header">
            <children>
                <Label text="Battleship Game" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="switchModeButton" onAction="#switchMode" styleClass="mode-button" text="Dark Mode" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <children>
                        <Label text="Player 1" styleClass="player-label">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <GridPane fx:id="player1Grid" gridLinesVisible="false" styleClass="game-grid">
                            <columnConstraints>
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                            </rowConstraints>
                        </GridPane>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>

                <VBox alignment="CENTER" spacing="20.0" styleClass="center-panel">
                    <children>
                        <Label fx:id="currentPlayerLabel" text="Current Player: Player 1" styleClass="status-label">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="gameStatusLabel" text="Player 1: Place your ships" styleClass="status-label" wrapText="true">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <VBox fx:id="shipPlacementPanel" alignment="CENTER" spacing="15.0" styleClass="ship-panel">
                            <children>
                                <Label text="Ship Placement" styleClass="panel-title">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>

                                <ComboBox fx:id="shipSelector" prefWidth="150.0" promptText="Select Ship" />

                                <VBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="Orientation:" />
                                        <RadioButton fx:id="horizontalRadio" selected="true" text="Horizontal" />
                                        <RadioButton fx:id="verticalRadio" text="Vertical" />
                                    </children>
                                </VBox>

                                <ListView fx:id="shipsListView" prefHeight="120.0" prefWidth="200.0" />
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="startGameButton" disable="true" onAction="#startGame" prefWidth="120.0" styleClass="action-button" text="Start Game" />
                                <Button fx:id="newGameButton" disable="true" onAction="#newGame" prefWidth="120.0" styleClass="action-button" text="New Game" />
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <children>
                        <Label text="Player 2" styleClass="player-label">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <GridPane fx:id="player2Grid" gridLinesVisible="false" styleClass="game-grid">
                            <columnConstraints>
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                                <ColumnConstraints minWidth="40.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                                <RowConstraints minHeight="40.0" />
                            </rowConstraints>
                        </GridPane>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </children>
</VBox>